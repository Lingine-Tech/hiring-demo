# ============================================
# AIRI Hiring Demo - Environment Configuration
# ============================================
# This is a simplified environment configuration for the hiring demo project
# demonstrating key features of the AIRI platform.

# ============================================
# Provider Health Checks
# ============================================
# Skip provider health checks to avoid CORS errors in browser environments
VITE_SKIP_PROVIDER_HEALTH_CHECK=true

# ============================================
# Default Providers
# ============================================
# These must match configured provider identifiers
DEFAULT_CHAT_PROVIDER=openai
DEFAULT_SPEECH_PROVIDER=openai-audio-speech
DEFAULT_TRANSCRIPTION_PROVIDER=openai-audio-transcription

# ============================================
# OpenAI Configuration (Example)
# ============================================
OPENAI_API_KEY=sk-...
OPENAI_BASE_URL=https://api.openai.com/v1/
OPENAI_MODEL=gpt-4o-mini

# ============================================
# Memory System Configuration (Example)
# ============================================
# Short-term memory settings
SHORT_TERM_MEMORY_PROVIDER=vercel-kv
MEMORY_NAMESPACE=hiring-demo
SHORT_TERM_MEMORY_MAX_MESSAGES=20
SHORT_TERM_MEMORY_TTL_SECONDS=1800

# Long-term memory settings
LONG_TERM_MEMORY_PROVIDER=none
MEMORY_LONG_TERM_PROVIDER=none

# Embedding provider for long-term memory
MEMORY_EMBEDDING_PROVIDER=openai
MEMORY_EMBEDDING_MODEL=text-embedding-3-small
MEMORY_EMBEDDING_DIMENSIONS=1536